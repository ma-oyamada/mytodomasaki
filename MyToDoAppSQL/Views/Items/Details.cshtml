@model MyToDoAppSQL.Models.Item

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-4">
    <h1 class="text-center text-primary">Task Details</h1>
    <p class="text-center text-muted">View the details of your task below.</p>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title text-primary">Task Information</h4>
                    <dl class="row">
                        <dt class="col-sm-4">Task</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.ToDo)</dd>
                        <dt class="col-sm-4">Due Date</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.DueDate)</dd>
                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">
                            @if (Model.IsComplete)
                            {
                                <span class="badge bg-success">Complete</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">Pending</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>
            <div class="mt-4 d-flex justify-content-between">
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Edit</a>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>
